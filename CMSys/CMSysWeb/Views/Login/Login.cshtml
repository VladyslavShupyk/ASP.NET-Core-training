@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login-style.css" />
    <link rel="icon" href="/images/icon-cmsys-web.ico">
</head>
<body>
    <div class="logincontent">
        <form class="form-control loginform" asp-action="Logining">
            <a class="loginlabel">Welcome!</a>
            <div class="form-group loginemail">
                <input type="email" class="form-control inputtype" name="email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="password" class="form-control inputtype" name="pass" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="submit" class="form-control btn-login" value="Login">
            </div>
        </form>
    </div>
</body>
</html>